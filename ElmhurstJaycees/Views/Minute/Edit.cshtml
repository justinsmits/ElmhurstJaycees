@model ElmhurstJaycees.Models.Minute

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $().ready(function () {
        $('#MeetingDate').datepicker({ dateFormat: 'mm/dd/yy' });
    });
</script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Minute</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.MeetingDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MeetingDate)
            @Html.ValidationMessageFor(model => model.MeetingDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MeetingMinutes)
        </div>
        <div class="editor-field">
             @Html.TextAreaFor(model => model.MeetingMinutes, new { cols = 50, @rows = 15 })
            @Html.ValidationMessageFor(model => model.MeetingMinutes)
        </div>

        <p>
            <input type="submit" value="Save" class="defaultButton" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
