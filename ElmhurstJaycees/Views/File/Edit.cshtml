@model ElmhurstJaycees.Models.File
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<form id="photoUpload" enctype="multipart/form-data" action="/File/Edit/@Model.FileID" method="post">
<fieldset>
    <legend>File</legend>
    <input type="file" name="_file" id="_file" />
    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>
     <div class="editor-label">
        @Html.LabelFor(m => m.Public)
    </div>
    <div class="editor-label">
        @Html.CheckBoxFor(m => m.Public)
        <span>Indicates that you want the file to be available to people who are not logged in. You will only want this unchecked if the file is intended for logged in members only.</span>
    </div>
    <div class="editor-label">
        @Html.LabelFor(m => m.Form)
    </div>
    <div class="editor-label">
        @Html.CheckBoxFor(m => m.Form)
        <span>Indicates that you want to file to show up in the forms list. This is used for files that we want to expose to non-members, such as a membership application form.
        Note: The file must be set to Public if you want it to show up for non logged in visitors</span>
    </div>
     <div class="editor-label">
        @Html.LabelFor(m => m.Photo)
    </div>
    <div class="editor-label">
        @Html.CheckBoxFor(m => m.Photo)
       <span>Indicates that you want this picture to show up on the photos page. 
       Note: The file must also be set to Public if you want it to show up to non logged in visitors</span>
    </div>
    <p>
        <input type="submit" value="Save" class="defaultButton" />
    </p>
</fieldset>
</form>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
