<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <link href="@Url.Content("~/Content/main/main.css")" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/tiny_mce/tiny_mce.js")" type="text/javascript"></script>
<script type="text/javascript">
    tinyMCE.init({
        mode: "textareas",
        theme: "simple"
    });
</script>
    
</head>
<body>

    <div id="fb-root"></div>
    <!-- wrap starts here -->
    <div id="wrap" class="wrapsidebar">
        <!--header -->
        <div id="header">
            <div style="float: left; margin: 15px 0px 0px 15px;">
                <a href="@Url.Content("~/Home/Index")">
                    <img src="@Url.Content("~/Content/images/jayceesheader_02.gif")" alt="Elmhurst Jaycees" />
                </a>
            </div>
            <div style="float: right; margin: 55px 30px 0px 0px;">
                <a href="https://www.usjaycees.org" target="_blank">
                    <img src="@Url.Content("~/Content/images/jayceesheader_01.gif")" alt="US Jaycees" width="220px" />
                </a>
            </div>
            <div style="clear: both;">
                <!-- fake -->
            </div>
            @*			
		<h1 id="logo-text"><a href="index.html">Elmhurst Jaycees</a></h1>		
		<p id="slogan">The United States Junior Chamber</p>		
			*@
            <div id="header-links">
                @Html.Partial("_LogOnPartial")
            </div>
        </div>
        <!-- navigation -->
        <div id="menu">
            @Html.Partial("_menuHeader")
        </div>
        <!-- content-wrap starts here -->
        <div id="content-wrap">
            <div id="main" class="mainsidebar">
                @RenderBody()
                <div id="fb-root"></div>
                <script>
                    (function (d, s, id) {
                        var js, fjs = d.getElementsByTagName(s)[0];
                        if (d.getElementById(id)) return;
                        js = d.createElement(s); js.id = id;
                        js.src = "//connect.facebook.net/en_IN/sdk.js#xfbml=1&version=v2.0";
                        fjs.parentNode.insertBefore(js, fjs);
                    }(document, 'script', 'facebook-jssdk'));</script>
                <div style="text-align: center; margin-top: 20px;">
                    <div class="fb-like" data-href="http://www.elmhurstjaycees.com" data-width="30" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
                </div>

            </div>
            <div id="sidebar">
                @Html.Partial("_eventsfeed", @ViewData["Events"])
                <div>
                    <div class="fb-activity" data-site="elmhurstjaycees.com" data-action="any" data-width="200" data-height="300" data-max-age="30" data-colorscheme="light" data-header="true"></div>
                   <!-- <script src="https://widgets.twimg.com/j/2/widget.js" type="text/javascript"></script>
                    <script type="text/javascript">
                        new TWTR.Widget({
                            version: 2,
                            type: 'search',
                            search: 'us jaycees',
                            interval: 10000,
                            title: 'US Jaycees',
                            subject: 'Recent Tweets',
                            width: 'auto',
                            height: 300,
                            theme: {
                                shell: {
                                    background: '#438FDB', //'#109ed1'
                                    color: '#ffffff'
                                },
                                tweets: {
                                    background: '#ffffff',
                                    color: '#444444',
                                    links: '#1985b5'
                                }
                            },
                            features: {
                                scrollbar: true,
                                loop: true,
                                live: true,
                                hashtags: true,
                                timestamp: true,
                                avatars: true,
                                toptweets: true,
                                behavior: 'default'
                            }
                        }).render().start();
                    </script>-->
                </div>
            </div>
            <!-- content-wrap ends here -->
        </div>
        <!--footer starts here-->
        <div id="footer">
           @Html.Partial("_menuFooter")
            <div style="clear:both;">
                <p>
                    &copy;@DateTime.Now.Year.ToString() <strong>Elmhurst Jaycees</strong> | <a href="http://www.styleshout.com/" target="_blank">
                        Style Shout</a> | Site by: <a href="http://www.linkedin.com/in/justinsmits" target="_blank">Justin Smits</a>
                </p>
            </div>
        </div>
        <!-- wrap ends here -->
    </div>
</body>
</html>
